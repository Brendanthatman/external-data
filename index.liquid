title: External Data Shopping, Inc
---
<div class="min-h-screen bg-gray-50">
  <!-- Hero Section -->
  <div class="bg-white py-8 mb-8 border-t border-b">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-extrabold text-gray-900 mb-2">Featured Products</h2>
      <p class="text-gray-600">Discover our hand-picked selection just for you</p>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="container mx-auto px-4" x-data="{
    image: $fetchjson('https://dummyjson.com/products/102', jsonItem = 'thumbnail'), 
    title: $fetchjson('https://dummyjson.com/products/102', jsonItem = 'title'), 
    description: $fetchjson('https://dummyjson.com/products/102', jsonItem = 'description'), 
    price: $fetchjson('https://dummyjson.com/products/102', jsonItem = 'price'), 
    image2: $fetchjson('https://dummyjson.com/products/53', jsonItem = 'thumbnail'), 
    title2: $fetchjson('https://dummyjson.com/products/53', jsonItem = 'title'), 
    description2: $fetchjson('https://dummyjson.com/products/53', jsonItem = 'description'), 
    price2: $fetchjson('https://dummyjson.com/products/53', jsonItem = 'price')}">
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Product 1 -->
      <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100">
        <div class="relative mb-6">
          <img class="w-full h-80 object-cover rounded-lg" x-bind:src="image" alt="Product Image" />
          <span class="absolute top-4 right-4 bg-white px-3 py-1 rounded-full text-sm font-medium text-gray-700 shadow-sm">New</span>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-gray-900" x-text="title"></h3>
        <p class="text-gray-600 mb-4 line-clamp-2" x-text="description"></p>
        <div class="flex items-center justify-between">
          <p class="text-2xl font-bold text-gray-900" x-text="price"></p>
          <button class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition-colors duration-300 flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span>Add to Cart</span>
          </button>
        </div>
      </div>

      <!-- Product 2 -->
      <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100">
        <div class="relative mb-6">
          <img class="w-full h-80 object-cover rounded-lg" x-bind:src="image2" alt="Product Image" />
          <span class="absolute top-4 right-4 bg-white px-3 py-1 rounded-full text-sm font-medium text-gray-700 shadow-sm">Featured</span>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-gray-900" x-text="title2"></h3>
        <p class="text-gray-600 mb-4 line-clamp-2" x-text="description2"></p>
        <div class="flex items-center justify-between">
          <p class="text-2xl font-bold text-gray-900" x-text="price2"></p>
          <button class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition-colors duration-300 flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span>Add to Cart</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>